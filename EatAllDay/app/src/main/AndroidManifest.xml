<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiwipabmin.eatallday">
    <!--old package kmitl.it13.millibear.eatallday -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_application_512dp"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.TabBarActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.RandomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.AddMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.ShowMenusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tiwipabmin.eatallday.controller.activity.EditMenuActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.tiwipabmin.eatallday.controller.activity.AboutApplicationActivity"></activity>
    </application>

</manifest>